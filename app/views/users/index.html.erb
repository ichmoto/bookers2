<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
      <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="1"></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(50,50) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

